# DB
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/ideology

# Security
JWT_SECRET=CHANGE_ME_TO_A_RANDOM_LONG_SECRET
JWT_ALG=HS256
ACCESS_TOKEN_EXPIRES_SECONDS=7200

# File storage
UPLOAD_DIR=/data/uploads
MAX_UPLOAD_MB=200
ALLOWED_FILE_EXT=pdf,pptx,docx,xlsx,mp4,png,jpg,zip

# Signed download
SIGNED_URL_SECRET=CHANGE_ME_TOO
SIGNED_URL_EXPIRES_SECONDS=60

# Preview
PREVIEW_DIR=/data/previews

# Storage (local by default; fill OSS_* to enable OSS)
STORAGE_BACKEND=local
OSS_ENDPOINT=
OSS_BUCKET=
OSS_ACCESS_KEY=
OSS_SECRET=
# Optional CDN/custom domain, eg https://cdn.xxx.com
OSS_BASE_URL=

# App
APP_NAME=Ideology Resource Platform

# CORS (comma separated origins, default http://localhost:3000)
ALLOW_ORIGINS=http://localhost:3000

# Logging
LOG_DIR=/data/logs
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=14
